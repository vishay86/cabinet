<div class = 'wrapper_with_padding'>
  <h1><%= @doc.title %></h1>

  <strong><%=simple_format(@doc.content) %></strong>

  <%= link_to 'All Docs', docs_path, class: 'btn btn-primary' %>
  <%= link_to 'Edit', edit_doc_path(@doc), class: 'btn btn-success'%> 
  <%= link_to 'Delete', doc_path(@doc), method: :delete, data:{confirm: 'Are you sure you want to delete?'}, class: 'btn btn-danger' %>
</div>